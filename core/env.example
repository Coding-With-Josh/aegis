# required — passphrase used to encrypt all agent keystores
KEYSTORE_PASSPHRASE=""

# solana RPC endpoint
# use http://127.0.0.1:8899 for local validator (recommended)
# or https://api.devnet.solana.com for public devnet
RPC_URL=https://api.devnet.solana.com

# deployed test program ID (set after: cd test-program && anchor deploy)
AEGIS_TEST_PROGRAM_ID=

# max lamports allowed per transfer (default 1 SOL = 1000000000)
MAX_TRANSFER_LAMPORTS=1000000000

# comma-separated extra program IDs to allow beyond system + test program
ALLOWED_PROGRAM_IDS=

# LLM — set at least one. GROQ_API_KEY takes priority when both are present
GROQ_API_KEY=
OPENAI_API_KEY=

# how often LLM agents tick in ms (default 30s)
LLM_INTERVAL_MS=30000

# log level: debug | info | warn | error (default info)
LOG_LEVEL=info

# API server port for the monitoring dashboard (default 5000)
API_PORT=5000
